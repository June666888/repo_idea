<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.june.dao.ResourceMapper">
    <!--资源分页&多条件查询  public List<Resource> findAllResourceByPage(ResourceVo resourceVo);-->
    <select id="findAllResourceByPage" parameterType="com.june.domain.ResourceVo" resultType="com.june.domain.Resource">
        select * from resource
        <where>
            <!--注意还要判断不等于空串-->
            <if test="name!=null and name!=''"><!--判断的是ResourceVo对象的name属性-->
                and name like concat('%',#{name},'%')
            </if>

            <if test="url!=null and url!=''">
                and url=#{url}
            </if>

            <if test="categoryId!=null and categoryId!=''"><!--与数据库表字段相同，是category_id，要看一下数据表再写-->
                and category_id=#{categoryId}
            </if>
        </where>
    </select>
</mapper>